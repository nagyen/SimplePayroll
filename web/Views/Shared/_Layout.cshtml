<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/lib/bootgrid/jquery.bootgrid.min.css" />
    <link rel="stylesheet" href="~/lib/date-picker/css/bootstrap-datepicker3.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body ng-app="app">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Simple Payroll</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
				@{
                    if((bool)ViewData["LoggedIn"])
	                {
	                    <li><a asp-area="" asp-controller="Auth" asp-action="Logout">Logout&nbsp;<i class="glyphicon glyphicon-log-out"></i></a></li>
	                }
			    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Simple Payroll</p>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script src="~/lib/bootgrid/jquery.bootgrid.min.js"></script>
    <script src="~/lib/bootgrid/jquery.bootgrid.fa.min.js"></script>
    <script src="~/lib/date-picker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/login-controller.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
